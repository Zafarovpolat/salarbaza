  @@index([status, startDate, endDate])
  @@index([slug])
  @@map("promotions")
}

model PromotionProduct {
  id          String   @id @default(cuid())
  promotionId String
  productId   String
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())

  promotion   Promotion @relation(fields: [promotionId], references: [id], onDelete: Cascade)
  product     Product   @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([promotionId, productId])
  @@index([promotionId])
  @@index([productId])
  @@map("promotion_products")
}

enum PromotionStatus {
  DRAFT
  SCHEDULED
  ACTIVE
  INACTIVE
}

enum PromotionType {
  SALE
  COLLECTION
  LIMITED
  NEW_ARRIVALS
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  RETURNED
}

enum DeliveryType {
  PICKUP
  DELIVERY
}

enum PaymentMethod {
  CASH
  CARD
  PAYME
  CLICK
  UZUM
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}