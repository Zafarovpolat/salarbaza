  id          String          @id @default(cuid())
  slug        String          @unique
  // –ù–∞–∑–≤–∞–Ω–∏–µ
  nameRu      String
  nameUz      String
  // –ö—Ä–∞—Ç–∫–æ–µ –æ–ø–∏—Å–∞–Ω–∏–µ (–¥–ª—è –≤–∏–¥–∂–µ—Ç–∞ –Ω–∞ –≥–ª–∞–≤–Ω–æ–π)
  descriptionRu String?
  descriptionUz String?
  // –ü–æ–ª–Ω—ã–µ –ø—Ä–∞–≤–∏–ª–∞ –∞–∫—Ü–∏–∏ (–¥–ª—è –æ—Ç–¥–µ–ª—å–Ω–æ–π —Å—Ç—Ä–∞–Ω–∏—Ü—ã)
  rulesRu     String?         @db.Text
  rulesUz     String?         @db.Text
  // –ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –±–∞–Ω–Ω–µ—Ä–∞ (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ)
  image       String?
  // –¢–∏–ø –ø—Ä–µ–¥–ª–æ–∂–µ–Ω–∏—è
  type        PromotionType   @default(SALE)
  // –°—Ç–∞—Ç—É—Å
  status      PromotionStatus @default(DRAFT)
  // –°—Ä–æ–∫ –¥–µ–π—Å—Ç–≤–∏—è
  startDate   DateTime
  endDate     DateTime
  // –°–æ—Ä—Ç–∏—Ä–æ–≤–∫–∞ –Ω–∞ –≥–ª–∞–≤–Ω–æ–π
  sortOrder   Int             @default(0)
  // –ú–µ—Ç–∞–¥–∞–Ω–Ω—ã–µ
